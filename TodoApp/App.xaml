<Application
    x:Class="TodoApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TodoApp"
    RequestedTheme="Dark">

    <Application.Resources>
        <AcrylicBrush x:Key="ControlAcrylic" BackgroundSource="HostBackdrop" TintColor="#0063B1" TintOpacity="0.7"
                      FallbackColor="#0063B1" />

        <AcrylicBrush x:Key="DefaultAcrylic" BackgroundSource="HostBackdrop" TintColor="#FF6E6E6E" TintOpacity="0.7"
                      FallbackColor="#FF6E6E6E"/>

        <SolidColorBrush x:Name="CustomContentDialogBackground" Color="#FF424242" />

        <Style TargetType="CommandBar">
            <Setter Property="Background" Value="{ThemeResource ControlAcrylic}" />
        </Style>
    </Application.Resources>
</Application>