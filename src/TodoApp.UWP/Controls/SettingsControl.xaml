<UserControl
    x:Class="TodoApp.Controls.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TodoApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <FontIcon
                Margin="0,2,7,0"
                FontFamily="{StaticResource FluentUIGlyphs}"
                FontSize="25"
                Glyph="&#xE9C0;" />
            <TextBlock FontSize="25" Text="App theme" />
        </StackPanel>
        <ComboBox
            x:Name="appThemeComboBox"
            Margin="0,10,0,0"
            CornerRadius="5"
            SelectionChanged="AppThemeComboBox_SelectionChanged">
            <ComboBoxItem Content="Dark" />
            <ComboBoxItem Content="Light" />
            <ComboBoxItem Content="Use system setting" />
        </ComboBox>
    </StackPanel>
</UserControl>
