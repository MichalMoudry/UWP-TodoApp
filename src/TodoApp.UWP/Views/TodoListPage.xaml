<Page
    x:Class="TodoApp.Views.TodoListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entities="using:TodoApp.Shared.Models.Entity"
    xmlns:local="using:TodoApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="{x:Bind ViewModel.PageLoaded}"
    mc:Ignorable="d">

    <Grid Margin="15,0,15,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <SplitView Margin="0,15,0,0" PanePlacement="Right">
            <SplitView.Pane>
                <TextBlock>Test</TextBlock>
            </SplitView.Pane>

            <ListView ItemsSource="{x:Bind ViewModel.Todos}" SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="entities:Todo">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{x:Bind Name}" />
                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="{x:Bind Added}" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </SplitView>

        <Rectangle
            Grid.Row="1"
            Height="1"
            Margin="0,10,0,0"
            HorizontalAlignment="Stretch"
            Fill="{ThemeResource SeparatorFill}" />

        <Grid Grid.Row="2" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Margin="0,0,15,0"
                PlaceholderText="Enter task name..."
                Text="{x:Bind ViewModel.TodoName, Mode=TwoWay}" />
            <Button Grid.Column="1" Click="{x:Bind ViewModel.AddTodo}">
                <StackPanel Orientation="Horizontal">
                    <FontIcon
                        Margin="0,1,0,0"
                        FontFamily="{StaticResource FluentUIGlyphs}"
                        Glyph="&#xE9A8;" />
                    <TextBlock Margin="3,2,0,0" Text="Add task" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>