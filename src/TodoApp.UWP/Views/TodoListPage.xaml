<Page
    x:Class="TodoApp.Views.TodoListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:TodoApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:entities="using:TodoApp.Shared.Models.Entity"
    xmlns:local="using:TodoApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource AppBackgroundBrush}"
    mc:Ignorable="d">

    <Grid Grid.Row="1">
        <Grid Margin="20,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListView
                x:Name="todoList"
                ItemsSource="{x:Bind ViewModel.Todos}"
                SelectionChanged="ListView_SelectionChanged"
                SelectionMode="Single">
                <!--  Item template  -->
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="entities:Todo">
                        <Grid
                            Padding="15,11,15,11"
                            Background="White"
                            CornerRadius="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <CheckBox
                                MinWidth="0"
                                Padding="0"
                                CornerRadius="10" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"
                                Text="{x:Bind Name}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <!--  Item style  -->
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalAlignment" Value="Stretch" />
                        <Setter Property="Margin" Value="-11,3,-11,0" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <Grid Grid.Row="1" Margin="0,10,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Margin="0,0,15,0"
                    PlaceholderText="Enter to-do name..."
                    Text="{x:Bind ViewModel.TodoName, Mode=TwoWay}" />
                <Button Grid.Column="1" Click="{x:Bind ViewModel.AddTodo}">
                    <StackPanel Orientation="Horizontal">
                        <FontIcon
                            Margin="0,1,0,0"
                            FontFamily="{StaticResource FluentUIGlyphs}"
                            Glyph="&#xE9A8;" />
                        <TextBlock Margin="3,2,0,0" Text="Add to-do" />
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>

        <controls:InAppNotification
            x:Name="notification"
            Margin="10,0,10,14"
            Canvas.ZIndex="1" />
    </Grid>
</Page>
